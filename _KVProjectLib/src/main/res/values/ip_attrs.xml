<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- slidelistview -->
    <declare-styleable name="SwipeItemView">
        <attr name="primaryView" format="reference" />
        <attr name="slidingView" format="reference" />
        <attr name="enableSliding" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeListView">
        <attr name="swipeItemViewID" format="reference"/>
    </declare-styleable>
    
    <!-- pwdinputview -->
    <declare-styleable name="PwdInputView">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
        <attr name="passwordLength" format="integer"/>
        <attr name="passwordWidth" format="dimension"/>
        <attr name="passwordColor" format="color"/>
        <attr name="passwordRadius" format="dimension"/>
    </declare-styleable>
    
    <color name="default_ev_border_color">#CCCCCC</color>
    <dimen name="default_ev_border_width">1dp</dimen>
    <dimen name="default_ev_border_radius">3dp</dimen>
    <color name="default_ev_password_color">#505050</color>
    <dimen name="default_ev_password_width">10dp</dimen>
    <dimen name="default_ev_password_radius">3dp</dimen>
    <integer name="default_ev_password_length">6</integer>

    <dimen name="custom_ev_border_width">1dp</dimen>
    <dimen name="custom_ev_border_radius">10dp</dimen>
    <dimen name="custom_ev_password_width">5dp</dimen>
    
</resources>