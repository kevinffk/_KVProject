<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ip font -->
    <style name="ip_darkgray_txt_14">
        <item name="android:textColor">@color/ip_dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ip_darkgray_txt_12">
        <item name="android:textColor">@color/ip_dark_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    
    <style name="ip_loading_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/ip_gray_rect_bg</item>
        <item name="android:windowAnimationStyle">@style/ip_fade_anim</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
    
    <style name="ip_fade_anim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- crop image ci-->
    <style name="ip_ci_cropButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#777777</item>
        <item name="android:background">@drawable/ip_ci_selector_crop_button</item>
    </style>
    
    <style name="ip_ci_menu_blue_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/ip_ci_menu_btn_text_selector</item>
        <item name="android:background">@drawable/ip_ci_menu_btn_blue_selector</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="ip_ci_menu_anim" parent="@android:style/Animation">  
    	<item name="android:windowEnterAnimation">@anim/ip_ci_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/ip_ci_push_bottom_out</item>
	</style>
    
    <!-- bluetooth -->
    <style name="ip_bt_dlg" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <!-- dialog -->
    <style name="pn_dlg_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/pn_dlg_btn_text_selector</item>
        <item name="android:background">@drawable/pn_dlg_btn_selector</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="ip_dlg" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>